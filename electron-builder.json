{
  "appId": "com.electron.app",
  "productName": "CBSElectronToDoList",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "out/**/*",
    "package.json",
    "!**/builder-debug.yml",
    "!**/*.blockmap"
  ],
  "extraMetadata": {
    "main": "out/main/index.cjs"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["ia32", "x64"],
        "artifactName": "${productName}-release-${version}-${arch}.${ext}"
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"],
        "artifactName": "${productName}-portable-release-${version}-${arch}.${ext}"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "shortcutName": "CBSElectronToDoList",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-release-${version}-${arch}.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "artifactName": "${productName}-release-${version}-${arch}.${ext}",
    "category": "Utility"
  },
  "publish": false
}
